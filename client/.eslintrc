{
    "env": {
        "es6": true,
        "browser": true,
    },
    "extends": "airbnb",
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        "arrow-parens": ["error", "always"],
        "arrow-body-style": 0,
        "class-methods-use-this": 0,
        "no-plusplus": 0,
        "no-console": "error",
        "no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 0, "maxEOF": 1}]
    }
}
